<h1>Environments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Integrated</th>
    <th class="list_actions"></th>
  </tr>

<% @environments.each do |environment| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= link_to environment.name, servers_environment_path(environment.id) %></td>
    <td><%= environment.description %></td>
    <td><%= environment.integrated %></td>
    <td class="list_actions">
      <%= link_to 'Show', environment %><br/>
      <%= link_to 'Edit', edit_environment_path(environment) %><br/>
      <%= link_to 'Delete', environment, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Environment', new_environment_path %>
