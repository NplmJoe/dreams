<h1>Applications</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Dev lead</th>
    <th>Support lead</th>
    <th></th>
  </tr>

<% @apps.each do |app| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= link_to app.name, servers_app_path(app.id) %></td>
    <td><%= app.dev_lead %></td>
    <td><%= app.support_lead %></td>
    <td class="list_actions">
      <%= link_to 'Show', app %><br/>
      <%= link_to 'Edit', edit_app_path(app) %><br/>
      <%= link_to 'Delete', app, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New App', new_app_path %>
